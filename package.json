{
  "name": "country-number-formatter",
  "version": "1.0.0",
  "description": "A TypeScript package that detects user's country and formats numbers according to local conventions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./react/components": {
      "import": "./dist/react/components.js",
      "require": "./dist/react/components.js",
      "types": "./dist/react/components.d.ts"
    },
    "./react/hooks": {
      "import": "./dist/react/hooks.js",
      "require": "./dist/react/hooks.js",
      "types": "./dist/react/hooks.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*",
      "require": "./dist/*",
      "types": "./dist/*"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:react",
    "build:core": "tsc",
    "build:react": "tsc -p tsconfig.react.json",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "demo": "node demo.js",
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "country",
    "locale",
    "number-format",
    "formatting",
    "internationalization",
    "i18n",
    "react",
    "typescript"
  ],
  "author": "Zeeshan Rabbani",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeeshan1509/country-number-formatter.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
